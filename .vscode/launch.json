{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "--- Devops Test ---------------------",
		},
		{
			"name": "devops clear",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/build/dev",
			"program": "${workspaceFolder}/src/devops.js",
			"args": [
				"clear"
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "devops test",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/build/dev",
			"program": "${workspaceFolder}/src/devops.js",
			"args": [
				"test"
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "--- Devops Production ---------------------",
		},
		{
			"name": "Devops: Publish Version",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/build/prod",
			"program": "${workspaceFolder}/src/devops.js",
			"args": [
				"publish_version"
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "Devops: Start New Version",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/build/prod",
			"program": "${workspaceFolder}/src/devops.js",
			"args": [
				"start_new_version"
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "--- Tests ----------------------",
		},
		{
			"name": "100) Initialization Tests",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"bdd",
				"tests/100*.js",
				"--timeout",
				"0",
				"--slow",
				"10",
				"--colors",
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "-------",
		},
		{
			"name": "All Tests",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"bdd",
				"tests/*.js",
				"--timeout",
				"0",
				"--slow",
				"10",
				"--colors",
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
	]
}